@model PRACTICE_WEB.Models.Student

@{
    ViewData["Title"] = "Create";
}

<div class="panel panel-primary mt-5 mb-3">
    <div class="panel-heading">
        <h3 class="panel-title text-center">Student Details Form</h3>
    </div>
    <div class="panel-body">
        <form asp-action="Create" class="form-horizontal">
            <fieldset>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="d-flex">
                    <div class="mt-3 me-3">
                        <label class="form-label">First Name</label>
                        <input type="text" class="form-control" asp-for="FirstName" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="mt-3 me-3">
                        <label class="form-label">Middle Name</label>
                        <input type="text" class="form-control" asp-for="MiddleName" />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>
                    <div class="mt-3  me-3">
                        <label class="form-label">Last Name</label>
                        <input type="text" class="form-control" asp-for="LastName" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex  me-3">
                    <div class="mt-3">
                        <label class=" form-label">Email</label>
                        <input type="email" class="form-control" asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mt-3  me-3">
                        <label class=" form-label">Phone</label>
                        <input type="text" class="form-control" asp-for="Phone" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex  me-3">
                    <div class="mt-3">
                        <label class=" form-label">House/Lot Number</label>
                        <input type="text" class="form-control" asp-for="HouseNumber" />
                        <span asp-validation-for="HouseNumber" class="text-danger"></span>
                    </div>
                    <div class="mt-3  me-3">
                        <label class=" form-label">Street</label>
                        <input type="text" class="form-control" asp-for="Street" />
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                    <div class="mt-3  me-3">
                        <label class=" form-label">City</label>
                        <input type="text" class="form-control" asp-for="City" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="mt-3  me-3">
                        <label class=" form-label">Province</label>
                        <input type="text" class="form-control" asp-for="Province" />
                        <span asp-validation-for="Province" class="text-danger"></span>
                    </div>
                </div>
                <div class="mt-5  me-3">
                    <input type="checkbox" class="form-check-input" id="isActive" asp-for="IsActive" />
                    <label class="form-check-label">Currently Active?</label>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>
                <hr />
                <div class="mt-5 d-flex justify-content-end align-items-center">
                    <a asp-action="Index" class="btn btn-danger">Cancel</a>
                    <div class="divider-vertical"></div>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary btn-sm justify-content-evenly">&larr; Back to List</a>
</div>

